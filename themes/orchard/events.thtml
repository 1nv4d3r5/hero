{extends file="layout.thtml"}
{block name="title"}
{$title} - {$smarty.block.parent}
{/block}
{block name="content"}
	<h1>{$title}</h1>
	
	{if $events}
		<ul class="events">
			{foreach $events as $event}
				<li>	
					<a class="name" href="/events/{$event.url_path}">{$event.title}</a>
					{if $event.description}<div class="description">{$event.description}</div>{/if}
				</li>
			{/foreach}
		<ul>	
	{/if}
	

{/block}