<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
<title>{block name="title"}{setting name="site_name"}{/block}</title>
<link href="{theme_url path="css/universal.css"}" rel="stylesheet" type="text/css" media="screen" />
<script type="text/javascript" src="{url path="themes/_common/jquery-1.4.2.min.js"}"></script>
<script type="text/javascript" src="{theme_url path="js/universal.js"}"></script>
<script type="text/javascript" src="{theme_url path="js/form.js"}"></script>
<script type="text/javascript" src="{theme_url path="js/box_layout.js"}"></script>
<script type="text/javascript" src="{theme_url path="js/brock_bar.js"}"></script>
{block name="head_includes"}
{/block}
</head>
<body>
<div id="notices">{friendshare}</div>

<div class="container">
	<div id="header">
		<a id="logo" href="{url}"><img src="{theme_url path="images/logo.gif"}" alt="Inside Music Media" /></a>
		<div id="topnav">
			{if $logged_in}
				<a href="{url path="users"}">my account</a>&nbsp;&nbsp;&nbsp;&nbsp;
				<a href="{url path="users/logout"}">logout</a>&nbsp;&nbsp;&nbsp;&nbsp;
			{else}
				{presale_only}
				<a href="{url path="users/login"}">login</a>&nbsp;&nbsp;&nbsp;&nbsp;
				<a href="{url path="users/register"}">subscribe</a>&nbsp;&nbsp;&nbsp;&nbsp;
				{/presale_only}
			{/if}
			<a href="{url path="store/cart"}">cart ({cart_items})</a>
		</div>

		<div id="search"><form method="get" action="{url path="search"}" class="validate"><input type="text" class="text required mark_empty" rel="search query" name="q" /></form></div>
	</div>
</div>
<div id="boxtop"></div>
<div id="box">
	<div class="container">
		<div id="nav">
			{*
			<ul>
				<li><a class="active current" href="{url}">Frontpage</a></a></li>
				<li><a class="jerry" href="{url path="about"}">About Jerry</a></li>

				<li><a class="subscribe" href="{url path="subscriptions"}">Subscribe</a></li>
				<li><a class="archives" href="{url path="archives"}">Archives</a></li>
				<li><a class="favorites" href="{url path="favorites"}">Favorite Things</a></li>
				<li><a class="store" href="{url path="store"}">Store</a></li>
				<li><a class="events" href="#">Conferences</a></li>
				<li><a class="app" href="#">App</a></li>

				<li><a class="contact" href="{url path="contact"}">Contact Jerry</a></li>
				<li><a class="tipster" href="#">Tipster</a></li>
			</ul>
			*}
			{menu name="main" show_sub_menus="off"}
		</div>
		<div id="content">
			{block name="content"}No content has been sent to this block{/block}
		</div>
		<div style="clear:both"></div>
	</div>
</div>
<div id="boxbot"></div>

{presale_only}
<div class="boxes">
	<div class="boxestop">

	
	</div>
	<div class="boxes">
		<div class="boxes2">
			<div class="container">
				{content type="7"}
				<div class="box">
					<h4 style="color: #{block:$header_colour}">{block:$header}</h4>
					{block:$content}
				</div>	
				{/content}
				{* <div class="box">
					<h4 style="color: #13a9a0">Latest Video</h4>
					<p>Watch Jerry interview a celebrity.</p>
					<p style="text-align:center"><img src="images/video.gif" alt="Play the Video" /></p>
				</div> *}
				<div class="box">
					<h4 style="color: #26a12c">Latest Posts</h4>

					<ol>
						{content type="1" limit="7"}
						<li><a href="{block:$url}">{block:$title|shorten(32)}</a></li>
						{/content}
					</ol>
				</div>
				<div style="clear:both"></div>
			</div>
		</div>
	</div>

	<div class="boxesbot">
	
	</div>
</div>
{/presale_only}

<div class="container footer">
	Copyright &copy; 2007-2010, Jerry Del Colliano LLC.  All Rights Reserved.  Designed and developed by <a href="http://www.electricfunction.com">Electric Function, Inc.</a>.
</div>
</body>
</html>