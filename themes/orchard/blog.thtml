{extends file="layout.thtml"}
{block name="title"}
{$title}
{/block}
{block name="content"}
	<h1>{$title}</h1>
	
	{foreach $content as $item}
		<li>
			<h4 class="date">{$item.date|date_format:"%A, %B %e, %Y"}</h4>
			<a href="{$item.url}">{$item.title}</a>
		</li>
	{/foreach}
	</ul>
	
	{$pagination}
	
{/block}